@model IEnumerable<WEBAPP.Models.ThirdParty>

@{
    ViewBag.Title = "ThirdPartyList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Third Party List</h2>

<p>
    @Html.ActionLink("Create New", "AddThirdParty", "Company", new { @class = "btn btn-sm btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditThirdParty", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })
            @*|@Html.ActionLink("Details", "Details", new { id=item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
