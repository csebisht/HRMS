@model IEnumerable<WEBAPP.Models.Master>

@{
    ViewBag.Title = "ColorMaster";
}

<script>

    function getColorMaster(Id) {

        $.ajax({
            url: "/Company/getColorMaster",
            data: { 'Id': Id },
            success: function (data) {

                $("#Id").val(data.Id);
                $("#Name").val(data.Name);
                $("#Description").val(data.Description);

            }
        });
    }

</script>

<h2>Color <i class="fas fa-palette"></i></h2>

@using (Html.BeginForm("ColorMaster", "Company", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
{


<div class="row">
    <div class="col-3">
        <input type="text" required class="form-control text-box" placeholder="Color" id="Name" name="Name" />       
        <input type="hidden" name="Id" id="Id" />
        <input type="hidden" name="Type" id="Type" />
    </div>
    <div class="col-3">
       
        <input type="text" required class="form-control text-box" placeholder="Description" id="Description" name="Description" />
        
    </div>
    <div>
        <input type="submit" class="btn btn-sm btn-primary" value="Save Color" />
    </div>

</div>
}
<br />
<table class="table table-striped">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i +1 }))
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Data.Id)
    </td>
    <td>
        <button type="button" style="background-color:@item.Data.Name" class="btn btn-sm"></button>
        @Html.DisplayFor(modelItem => item.Data.Name)
    </td>
    <td>
      
        @Html.DisplayFor(modelItem => item.Data.Description)
    </td>
    <td>
        <a onclick="getColorMaster(`@item.Data.Id`);"> <span class="fas fa-edit">edit</span></a>
    </td>
</tr>
    }

</table>
