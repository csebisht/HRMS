@model WEBAPP.Models.Payroll
@{
    /**/

    ViewBag.Title = "";
}

@*<h2>@ViewBag.Title.</h2>*@

@using (Html.BeginForm("AddPayroll", "Payroll", FormMethod.Post, new { @class = "w-75 container", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <style>

        /*.row {
            border-style: groove;
        }*/

    </style>
    <div class="form-group">

        <label class="d-flex justify-content-center"><b>Immigration security services pvt ltd</b></label>
        <label class="d-flex justify-content-center"><b>A-39, Ring Rd, Awas Vikas, Rudrapur, Jagatpura, Uttarakhand 263153</b></label>
        <p></p>
    </div>
    @*<div class="form-group">

        </div>*@

    <div class="form-group">

        <label class="d-flex justify-content-center"><b>Pay Slip: Mar-24</b></label>
    </div>
    <br />
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Employee Name</label>
            <div class="col-sm-3">

                @Html.TextBoxFor(m => m.EmployeeId, new { @class = "form-control", @required = "required", @autocomplete = "off" })


            </div>
            <label class="col-sm-3">Company Name</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.CompanyId, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Designation</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.DesignationId, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Leave Days</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.LeaveDays, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Overtime Days</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.OvertimeDays, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Paid Leave Days</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.PaidLeaveDays, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Total Working Days</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.TotalWorkingDays, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Salary Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.SalaryAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Gross Salary Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.GrossSalaryAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Deduction Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.DeductionAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Deduction Details</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.DeductionDetails, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Incentive Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.IncentiveAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-sm-6 d-flex justify-content-center"><b>Earings</b></label>

            <label class="col-sm-6 d-flex justify-content-center"><b>Deductions</b></label>

        </div>

    </div>

    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Advance Paid Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.AdvancePaidAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Advance Deducted Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.AdvanceDeductedAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Additional Paid Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.AdditionalPaidAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Additional Deducted Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.AdditionalDeductedAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Additional Paid Details</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.AdditionalPaidDetails, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Additional Deducted Details</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.AdditionalDeductedDetails, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Month</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Month, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Year</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Year, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Net Salary Amount</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.NetSalaryAmount, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
            <label class="col-sm-3">Working Days</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.WorkingDays, new { @class = "form-control", @required = "required", @autocomplete = "off" })
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>









}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
